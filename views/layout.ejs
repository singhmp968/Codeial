        <!-- <link rel="stylesheet" href="<%= assetPath('css/layout.css')%>"> -->
        <link rel="stylesheet" href="<%= assetPath('css/layout.css') %>">
        
        <!-- adding style using scss for header and footer files -->
        <!-- <link rel="stylesheet" href="/css/header.css"> -->
        <link rel="stylesheet" href="<%= assetPath('css/header.css') %>">
       
        <!-- <link rel="stylesheet" href="/css/footer.css"> -->
        <link rel="stylesheet" href="<%= assetPath('css/footer.css') %>">
        
        <!-- whenever there ;is link tag or script tag in the body  it will automaticall put it over  <%- style %> and <%- script %>-->
        <%- style %>
    </head>

    <body>
        <%- include('_header'); -%>

        
        <!-- <h1>Codeial / <%= title %></h1> -->
        <main id="layout-main">
            <%- body %> <!--here th e body part of home and userhome is going to run-->
         </main>
        <%- include('_footer'); -%>
        <%- script %>

        <script>
         <% if (flash.success && flash.success.length > 0){%>
            new Noty({
                    theme:'relax',
                    text: '<%= flash.success %>',
                    type:'success',
                    layout:'topRight',
                    timeout:1500
                    
                }).show();
        <% } %>

        <% if (flash.error && flash.error.length > 0){%>
            new Noty({
                    theme:'relax',
                    text: '<%= flash.error %>',
                    type:'error',
                    layout:'topRight',
                    timeout:1500
                    
                }).show();
        <% } %>
              

        </script>

    </body>
</html>